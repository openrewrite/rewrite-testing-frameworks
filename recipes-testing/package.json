{
  "name": "@openrewrite/recipes-testing",
  "version": "0.1.0",
  "license": "Moderne Source Available License",
  "description": "OpenRewrite recipes for JavaScript/TypeScript testing frameworks.",
  "homepage": "https://github.com/openrewrite/rewrite-testing-frameworks",
  "main": "./dist/src/index.js",
  "types": "./dist/src/index.d.ts",
  "files": [
    "dist/src/**",
    "src/**"
  ],
  "exports": {
    ".": "./dist/src/index.js"
  },
  "scripts": {
    "build": "rm -rf ./dist tsconfig.build.tsbuildinfo && tsc --build tsconfig.build.json",
    "dev": "tsc --watch -p tsconfig.json",
    "test": "npm run build && jest",
    "ci:test": "jest"
  },
  "dependencies": {
    "@openrewrite/rewrite": "next",
    "immer": "^10.1.1"
  },
  "devDependencies": {
    "@types/jest": "^29.5.13",
    "jest": "^29.7.0",
    "tmp-promise": "^3.0.3",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.6.2"
  }
}
